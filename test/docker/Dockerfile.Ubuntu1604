WORKDIR /simde/
RUN bash ./test/native-aliases.sh
RUN mkdir -p /simde/build_ubuntu16.04_clang_native
WORKDIR /simde/build_ubuntu16.04_clang_native
RUN CC=/usr/bin/clang CXX=/usr/bin/clang++ CFLAGS="-Wall -Wextra -march=native -DSIMDE_ENABLE_NATIVE_ALIASES -DSIMDE_NATIVE_ALIASES_TESTING" CXXFLAGS="-Wall -Wextra -march=native -DSIMDE_ENABLE_NATIVE_ALIASES -DSIMDE_NATIVE_ALIASES_TESTING"  meson .. \
 && ninja && ./test/run-tests

